html,
body
	height 100%

$bg
	background white

	height 100px
	.content
		width 95%
		align(both)
		text-align center
// Header home
.header-site
	@extends $bg
	.content
		top:10%
	h1,h2
		color: sec
		text-align center
	.site-title
		color: black
		padding:1%
		font-size: 4em
		mainFont(600)
		text-transform: uppercase
		@media screen and (max-width: 600px) {
		font-size: 1.5em
		padding: 2px
	}
	.site-description
		font-size rem(20px)
		display block
		margin rem(30px) 0
		+above(cut)
			font-size rem(40px)

// Header Post
.header-post
	@extends $bg
	.content
		+above(cut)
			center(1000px)
	.subheader
		display table
		padding 20px
		a
			border 2px solid sec
			border-radius 20px
			padding 0 10px
			+above(cut)
				padding 0 10px

	.date
		mainFont(300)
		font-size rem(16px)
	h1
		text-transform uppercase
		font-size rem(30px)
		margin 0 0 30px
		+above(cut)
			font-size rem(60px)
	.subtitle
		mainFont(300)
		font-size rem(20px)
	h1,.subtitle, .date
		color sec
		text-align center
	p
		color sec
		text-decoration none
		mainFont(300)
		font-size rem(18px)