.post-content
  // padding 5% 20% 5% 20%
  background-color main
  max-width 100%
  text-align center
  h1
    padding 10% 0 0 0
  h2,h3,h4,h5
    padding 5% 0 0 0
  li
    padding:5% 0 0 0
  p
    padding-top 3%
  a
    color:main-a
    /* offset-x | offset-y | blur-radius | color */
    text-shadow: 0px 0px 1px rgba(0,0,0,.5);
  blockquote
      margin rem(4%) auto
      width 33%
      border-left solid black 1px
      text-align right
      margin 2%
      float right
      font-size 1.5em
  blockquote.left
    float left
    border-left none
    border-right solid black 1px

.blockquote-faux
    font-size 1.5em
    @media screen and (max-width: 500px)
      font-size 1.1em
.post-article
    background-color white
    // width 80%
    padding 10% 15% 0 15%

.post-prim
    background-color main
    width 100%
    padding 5% 20% 5% 20%

.post-alt {
    background-color main-alt
    width 100%
    padding 3% 20% 1% 20%
    p {
    background-color #2B425E
  }
  }

.divider
  font-size 5em
  text-align center
  color divid
  margin-top 2%
  margin-bottom 2%
  span
    @media screen and (max-width: 500px)
      font-size .5em

.divider-down
    transform rotate(180deg)
.img-wrapper
    margin-bottom 2%
    text-align inherit

.youtube-player
    margin-top 4%
    margin-bottom 4%
